# ===========================================
# FRONTEND ENVIRONMENT CONFIG
# ===========================================

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=10000
VITE_API_RETRIES=3

# ===========================================
# FIREBASE CONFIGURATION (FRONTEND)
# ===========================================

# Firebase Web App Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Emulator Configuration (Development)
VITE_FIREBASE_EMULATOR=false
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIREBASE_AUTH_EMULATOR_PORT=9099
VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
VITE_FIREBASE_STORAGE_EMULATOR_PORT=9199

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================

VITE_AUTH_PROVIDER=jwt
VITE_AUTH_TOKEN_KEY=authToken
VITE_AUTH_REFRESH_TOKEN_KEY=refreshToken
VITE_AUTH_SESSION_KEY=sessionId
VITE_AUTH_AUTO_REFRESH=true
VITE_AUTH_REFRESH_THRESHOLD=300000

# ===========================================
# UI CONFIGURATION
# ===========================================

VITE_UI_THEME=light
VITE_UI_LANGUAGE=en
VITE_UI_ANIMATIONS=true
VITE_UI_COMPACT_MODE=false
VITE_UI_SIDEBAR_COLLAPSED=false

# ===========================================
# FEATURE FLAGS
# ===========================================

VITE_FEATURE_AUTH=true
VITE_FEATURE_REAL_TIME=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_OFFLINE=true
VITE_FEATURE_PWA=true
VITE_FEATURE_ANALYTICS=false

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

VITE_PERF_LAZY_LOADING=true
VITE_PERF_CODE_SPLITTING=true
VITE_PERF_CACHING=true
VITE_PERF_CACHE_TIMEOUT=300000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true
VITE_SOURCE_MAPS=true
VITE_CONSOLE_LOGS=true
