{
  "name": "grocery-store-frontend",
  "version": "1.0.0",
  "description": "Grocery Store Frontend with Clean Architecture",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__/components --testPathPattern=__tests__/store --testPathPattern=__tests__/services",
    "test:integration": "jest --testPathPattern=__tests__/pages --testPathPattern=__tests__/App",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:production": "NODE_ENV=production npm run build",
    "precommit": "npm run lint && npm run test:ci && npm run format:check",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@grocery-store/core": "file:../packages/core",
    "@reduxjs/toolkit": "^2.9.0",
    "axios": "^1.3.0",
    "clsx": "^1.2.1",
    "firebase": "^12.2.1",
    "lucide-react": "^0.263.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.0",
    "react-hot-toast": "^2.4.0",
    "react-query": "^3.39.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.5.0",
    "eslint": "^8.35.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.5.6",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.4.17",
    "vite": "^4.1.0"
  }
}
